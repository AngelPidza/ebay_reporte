@model ebay.Models.Product
@{
    ViewData["Title"] = $"{Model.Title} - MegaMarket";
}

<style>
    .product-details-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        padding: 2rem;
        margin: 2rem 0;
    }

    .product-image-container {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .product-image {
        width: 100%;
        height: auto;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.03);
        }

    .product-category {
        display: inline-block;
        background-color: rgba(32, 129, 226, 0.1);
        color: var(--primary-color);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .product-price {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .product-description {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #4a5568;
        margin-bottom: 2rem;
    }

    .product-info {
        background: rgba(32, 129, 226, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

        .info-item:last-child {
            margin-bottom: 0;
        }

    .info-icon {
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--primary-color);
        color: white;
        border-radius: 8px;
        margin-right: 1rem;
    }

    .stock-status {
        font-size: 1.1rem;
        font-weight: 500;
    }

        .stock-status.in-stock {
            color: #28a745;
        }

        .stock-status.out-stock {
            color: #dc3545;
        }

    .add-to-cart-btn {
        background: linear-gradient(to right, var(--primary-color), #1565c0);
        border: none;
        border-radius: 30px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 500;
        width: 100%;
        transition: all 0.3s ease;
    }

        .add-to-cart-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(32, 129, 226, 0.3);
        }

        .add-to-cart-btn i {
            margin-right: 0.5rem;
        }

    .breadcrumb {
        background: transparent;
        padding: 0;
        margin-bottom: 1rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: "›";
        color: var(--primary-color);
    }
</style>

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Inicio</a></li>
            <li class="breadcrumb-item"><a href="/Products" class="text-decoration-none">Productos</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="product-details-container">
        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="product-image-container">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder.png" : Model.ImageUrl)"
                         alt="@Model.Title"
                         class="product-image">
                </div>
            </div>
            <div class="col-lg-6">
                <span class="product-category">@Model.Category</span>
                <h1 class="h2 mb-3">@Model.Title</h1>
                <div class="product-price">$@Model.Price.ToString("F2")</div>

                <p class="product-description">@Model.Description</p>

                <div class="product-info">
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="bi bi-box"></i>
                        </div>
                        <div>
                            <strong>Estado:</strong>
                            <span class="stock-status @(Model.Stock > 0 ? "in-stock" : "out-stock")">
                                @if (Model.Stock > 0)
                                {
                                    <i class="bi bi-check-circle"></i>
                                    <p> @Model.Stock unidades disponibles</p>
                                                    }
                                else
                                {
                                    <i class="bi bi-x-circle"></i>
                                    <p>Agotado</p>
                                    
                                                    }
                            </span>
                        </div>
                    </div>
                    @if (Model.ReleaseDate.HasValue)
                    {
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="bi bi-calendar"></i>
                            </div>
                            <div>
                                <strong>Fecha de lanzamiento:</strong>
                                <span>@Model.ReleaseDate.Value.ToShortDateString()</span>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Stock > 0)
                {
                    <form method="post" asp-action="AddToCart" asp-controller="Orders">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <button type="submit" class="add-to-cart-btn btn btn-primary">
                            <i class="bi bi-cart-plus"></i>
                            Agregar al Carrito
                        </button>
                    </form>
                }
                else
                {
                    <button class="add-to-cart-btn btn btn-secondary" disabled>
                        <i class="bi bi-x-circle"></i>
                        Producto Agotado
                    </button>
                }
            </div>
        </div>
    </div>
</div>
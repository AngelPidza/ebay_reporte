<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MegaMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #2081e2;
            --secondary-color: #ff9800;
            --accent-color: #f50;
            --background-light: #f8f9fa;
        }

        html {
            position: relative;
            min-height: 100%;
            height: 100%;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background-light);
            margin-bottom: 60px; /* Altura del footer */
            min-height: 100%;
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        /* Navbar Styles */
        .navbar {
            background: linear-gradient(to right, var(--primary-color), #1565c0) !important;
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white !important;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            margin: 0 0.2rem;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 5px;
            }

        .welcome-message {
            color: white !important;
            padding: 0.5rem 1rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            margin: 0 0.5rem;
        }

        /* Search Bar */
        .search-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .search-form {
            display: flex;
            align-items: center;
            background: white;
            border-radius: 25px;
            padding: 0.3rem 0.5rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .search-input {
            border: none;
            padding: 0.5rem;
            flex-grow: 1;
            margin-right: 0.5rem;
        }

        .search-input:focus {
            outline: none;
        }

        .search-button {
            background-color: var(--accent-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            cursor: pointer;
        }

        /* Footer Styles */
        footer {
            flex-shrink: 0; /* Evita que el footer se encoja */
            position: relative; /* Cambiamos de absolute a relative */
            width: 100%;
            background-color: #1a1a1a;
            color: white;
            padding: 1rem 0;
        }

            footer a {
                color: white;
                text-decoration: none;
            }

                footer a:hover {
                    color: var(--secondary-color);
                }

        .content-wrapper {
            flex: 1 0 auto; /* Esto hace que el contenido empuje el footer hacia abajo */
            padding-bottom: 20px; /* Espacio extra antes del footer */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop"></i> MegaMarket
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <div class="search-container mx-auto">
                        <form class="search-form">
                            <input type="text" class="search-input" placeholder="Buscar productos...">
                            <button type="submit" class="search-button">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                        </form>
                    </div>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-shop"></i> Productos
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-box"></i> Pedidos
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <span class="welcome-message">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Salir
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>MegaMarket</h6>
                    <small>Tu destino de compras en línea</small>
                </div>
                <div class="col-md-4">
                    <h6>Enlaces</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#">Sobre Nosotros</a></li>
                        <li><a href="#">Términos y Condiciones</a></li>
                        <li><a href="#">Política de Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Síguenos</h6>
                    <div class="mt-2">
                        <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-3 mb-3">
            <div class="text-center">
                <small>&copy; @DateTime.Now.Year MegaMarket. Todos los derechos reservados.</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>